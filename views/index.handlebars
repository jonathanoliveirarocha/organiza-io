                     {{#each monday}}
                    <div class="appointmentItem" onclick="describe(['Segunda-Feira','{{this.[0]}}','{{this.[1]}}','{{this.[2]}}','{{this.[3]}}',{{@index}}])">
                        <div class="hour">
                            <p>{{this.[0]}}</p>
                        </div>
                        <div class="appointmentDesc">
                            <p>{{this.[2]}}</p>
                        </div>
                        <div class="hourEnd">
                        <p>{{this.[1]}}</p>
                        </div> 
                        </div>
