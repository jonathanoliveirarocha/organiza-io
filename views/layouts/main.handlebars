{{!-- General content of all pages --}}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organiza.io</title>    
    <link rel="stylesheet" href="/css/style-general.css">
</head>
<body>

    {{!-- Page content --}}
    {{{body}}}

    {{!-- Error or success message --}}
    <div class="status">
        {{#if error}}
            {{!-- Message if there is an authentication error  --}}
            <div class="statusMsg danger borderDanger">
                <div class="closeMsg">
                    <img src="/images/closeWindow2.png" alt="BotÃ£o de Fechar" onclick="closeMsg()">
                    <!-- Used Image: https://br.freepik.com/icone/perto_2976286#fromView=search&term=close+&page=1&position=0 -->
                </div>
                <div class="contentMsg">
                    <p class="msgDialog danger">{{error}}</p>
                </div>
            </div>
        {{else}}
        {{/if}}
        {{!-- Testing success or error in other cases --}}
        {{>_msg}}
    </div> 

     {{!-- JavaScript import --}}
    <script src="/js/main.js"></script>
</body>
</html>
